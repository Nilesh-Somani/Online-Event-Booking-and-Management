{
  "name": "eventhub-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "dev": "npm-run-all --parallel server client"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
